<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/library"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:fontFamily="@font/consolas_font"
        android:text="SIGN IN"
        android:textColor="#f7f8f6"
        android:gravity="center"
        android:textSize="38dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@mipmap/user" />

        <EditText
            android:id="@+id/edtUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Username"
            android:letterSpacing=".04"
            android:textSize="22dp"
            android:fontFamily="@font/consolas_font"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/pass"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/edtPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/consolas_font"
            android:hint="Password"
            android:inputType="textPassword"
            android:letterSpacing=".04"
            android:textColor="@color/white"
            android:textSize="22dp" />
    </LinearLayout>


    <CheckBox
        android:id="@+id/chkRemember"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:button="@null"
        android:drawableLeft="@drawable/custom_checkbox"
        android:drawablePadding="5dp"
        android:paddingStart="5dp"
        android:layout_alignParentStart="true"
        android:text="Remember Me"
        android:textSize="20dp"
        android:letterSpacing=".05"
        android:fontFamily="@font/consolas_font"
        android:textStyle="italic"
        android:textColor="#f7f8f6" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="15dp"
        android:background="@drawable/button"
        android:text="LOGIN"
        android:letterSpacing=".04"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="22dp" />


    <com.facebook.login.widget.LoginButton
        android:id="@+id/btnFacebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:padding="12dp"
        android:textSize="22dp" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btnGoogle"
        android:layout_margin="8dp"
        android:textSize="22dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/txtCopyright"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="15dp"
            android:text="Â© FALL2022 / BaoNgoc"
            android:textColor="#C9FFFFFF"
            android:textSize="17dp"
            android:fontFamily="@font/consolas_font"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>